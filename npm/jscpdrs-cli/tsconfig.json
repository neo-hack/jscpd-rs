{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": ".lib"
  },
  "exclude": ["node_modules", "lib"]
}